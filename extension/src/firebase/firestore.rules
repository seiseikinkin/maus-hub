rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 設定データ - 認証されたユーザーのみ読み取り可能
    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // 書き込みは管理者のみ（Firebaseコンソールから手動設定）
    }
    
    // PokePasteデータ - 認証されたユーザーが自分のデータのみアクセス可能
    match /pokepastes/{pokepasteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // ユーザー設定 - 認証されたユーザーが自分の設定のみアクセス可能
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // リプレイデータ - 認証されたユーザーが自分のデータのみアクセス可能
    match /replays/{replayId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // その他のドキュメントは認証が必要（一時的に緩和）
    match /{document=**} {
      allow read, write: if true; // 一時的にすべて許可（デバッグ用）
    }
  }
}
